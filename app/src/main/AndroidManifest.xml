        <activity android:name="cn.steve.radiobutton.RadioButtonMainActivity"></activity>

        <activity android:name="cn.steve.gallery.GalleryMainActivity"></activity>

        <!--使用gallery实现时期滑动选择-->
        <activity android:name="cn.steve.gallery.MyGalleryMainActivity"></activity>

