        <activity android:name="cn.steve.circle.CircleMianActivity"></activity>

        <!--recyclerview -->
        <activity android:name="cn.steve.recyclerview.SimpleRecyclerViewMainActivity"></activity>

        <!--检测手机卡-->
        <activity android:name="cn.steve.simcardnet.SimCardMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--activity的生命周期-->
        <activity android:name="cn.steve.activitylifecycle.LifeActivityA" />
        <activity android:name="cn.steve.activitylifecycle.LifeActivityB" />
        <activity android:name="cn.steve.activitylifecycle.LifeCircleActivity">

        </activity>

        <!--animator demo-->
        <activity android:name="cn.steve.animator.AnimatorActivity">

        </activity>

        <!--audio demo-->
        <activity android:name="cn.steve.audiomanager.AudioManagerActivity"></activity>

        <!--修改系统亮度的demo-->
        <activity android:name="cn.steve.brightness.BrightnessActivity"></activity>
        <activity android:name="cn.steve.brightness.SeekBarBrightnessActivity"></activity>

        <!-- 手机网络状态的监听 -->
        <activity android:name="cn.steve.datatraffic.DataTrafficActivity">
        </activity>
        <receiver android:name="cn.steve.datatraffic.NetConnectBroadCastReceiver"></receiver>

        <!-- 当前设备的一些硬件信息 -->
        <activity android:name="cn.steve.deviceinfo.DeviceInfoActivity"></activity>

        <!-- 悬浮窗demo -->
        <activity android:name="cn.steve.floatingview.FloatingMainActivity"></activity>

