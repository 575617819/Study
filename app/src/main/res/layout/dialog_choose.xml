<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/shareButtonQQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                />

        <Button
                android:id="@+id/shareButtonQQZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ空间"
                />

        <Button
                android:id="@+id/shareButtonWeixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"
                />
    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/shareButtonWeixinTimeLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信朋友圈"
                />

        <Button
                android:id="@+id/shareButtonWeixinFaverate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信收藏"
                />

    </LinearLayout>


</LinearLayout>